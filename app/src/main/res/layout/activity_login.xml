<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bacground1212"
    tools:context=".LoginRegister.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:visibility="gone"
            android:id="@+id/cicler_logo"
            android:src="@drawable/book"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_height="100sp" />
        <TextView
            android:layout_marginTop="10dp"
            android:textColor="#E91E63"
            android:visibility="gone"
            android:textStyle="normal"
            android:gravity="center"
            android:textSize="20dp"
            android:text="Wellcome to Book Store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30dp"
            android:text="@string/dangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="35dp">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:text="@string/email"
                android:textColor="#E91E63"
                android:textSize="16sp"
                android:textStyle="normal" />
        <EditText
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:layout_below="@+id/tvUsername"
            android:id="@+id/edtEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="#000"
            android:textColor="#000"
            android:background="@drawable/rounded_edittext_lore"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:inputType="text"
            android:padding="10dp"
            />
        <TextView
            android:textColor="#E91E63"
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtEmailLogin"
            android:layout_margin="15dp"
            android:text="@string/nhap_mk"
            android:textSize="16sp"
            android:textStyle="normal"/>
        <EditText
            android:drawableRight="@drawable/ic_vpn_key_black_24dp"
            android:layout_below="@+id/tvPassword"
            android:id="@+id/edtPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColorHint="?attr/textcolor"
            android:textColor="#000"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext_lore"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawablePadding="30dp"
            android:padding="10dp"
            />
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/cv"
            android:layout_alignRight="@+id/cv"
            android:layout_alignBottom="@+id/cv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:layout_marginBottom="-20dp"
            android:elevation="10dp">
            <Button
                android:textColor="#2196F3"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/dangnhap"
                android:background="@drawable/button_login_fff"
                android:textAllCaps="false" />
        </RelativeLayout>
    <ProgressBar
        android:id="@+id/loading_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
        <LinearLayout
            android:padding="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_weight="1"
                android:id="@+id/cbRemember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="?attr/backgroundcolor"
                android:visibility="gone"
                android:text="@string/ghinholuachon"
                android:textColor="#E91E63" />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:id="@+id/link_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dangkytaikhoan"
                android:textColor="#fff"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="regis"
                android:textSize="15dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnSmsLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_login_fff"
            android:drawableLeft="@drawable/ic_sms"
            android:onClick="loginsms"
            android:padding="1dp"
            android:text="@string/dangnhap_sms"
            android:textColor="#2196F3"/>
    </LinearLayout>
</LinearLayout>