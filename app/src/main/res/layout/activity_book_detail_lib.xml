<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundcolor"
    tools:context=".Activity.Library.BookDetailLibActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_lib"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="?attr/textcolor"
            app:title="SÃ¡ch"
            app:navigationIcon="@drawable/ic_close"/>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:id="@+id/imgBook_lib_acti"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/gmbapdful" />
    <TextView
        android:id="@+id/txtTensach_lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:hint="Teen sacs"
        android:textColor="?attr/textcolor"
        android:textColorHint="?attr/textcolor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/ratingbar_book_detail_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@android:style/Widget.Holo.Light.RatingBar.Small"/>
        <TextView
            android:id="@+id/numrating_book_detail_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textColor="?attr/textcolor" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtDocsach"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="@string/docsach"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="?attr/textcolor"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_gravity="center"
        android:onClick="DocSach"
        />
    <TextView
        android:id="@+id/txtNgheaudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nghe Audio"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="20dp"
        android:textColor="?attr/textcolor"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/txtXemnhanxet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:drawableRight="@drawable/ic_chevron_right"
        android:text="@string/danhgia_doc"/>
</LinearLayout>