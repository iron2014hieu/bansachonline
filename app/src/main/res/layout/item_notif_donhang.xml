<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/cardbackground"
    android:weightSum="5"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/img_dh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="?attr/cardbackground"
        android:src="@drawable/icon_media"/>
    <LinearLayout
        android:id="@+id/linnear_giua"
        android:background="?attr/cardbackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical">
        <View
            android:id="@+id/view_giaothanhcong"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#FF0000"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:id="@+id/txtMota_tieude_dh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="?attr/textcolor"
            android:textStyle="bold"
            android:text="Đang vận chuyển"/>

        <TextView
            android:visibility="gone"
            android:textSize="13dp"
            android:id="@+id/txtMota_notif_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/textcolor"
            android:layout_marginTop="5dp"
            android:text="Tất cả hàng đã dc vân chuyen trc nagyf 20/11/2019"/>

        <TextView
            android:id="@+id/txtThoigian_dh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/ic_access_time"
            android:gravity="center"
            android:padding="5dp"
            android:text="20/11/2019"
            android:textColor="?attr/textcolor"
            android:visibility="gone" />

    </LinearLayout>
    <TextView
        android:gravity="right"
        android:drawableRight="@drawable/ic_arrow_drop_down"
        android:id="@+id/tvXemchitiet"
        android:textColor="#F44336"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="right"
        android:visibility="gone"
        android:id="@+id/tvAnchitiet"
        android:textColor="#F44336"
        android:drawableRight="@drawable/ic_arrow_drop_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>